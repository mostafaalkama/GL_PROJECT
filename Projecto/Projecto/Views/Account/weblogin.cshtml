@using Projecto.Models
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>

<head>
    <title>Projecto manage your & Project</title>
    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Elite login Form a Responsive Web Template, Bootstrap Web Templates, Flat Web Templates, Android Compatible Web Template, Smartphone Compatible Web Template, Free Webdesigns for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design">
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta-Tags -->
    <!-- Stylesheets -->
    <link href="~/web/css/font-awesome.css" rel="stylesheet">
    <link href="~/web/css/style.css" rel='stylesheet' type='text/css' />
    <!--// Stylesheets -->
    <!--fonts-->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i" rel="stylesheet">
    <!--//fonts-->
</head>

<body>

    <h1> <span style="color:dodgerblue;"> <strong>Projecto</strong> manage your  &amp; Project</span></h1>
  
    <br />
    <div class="w3ls-login">

        @using (Html.BeginForm("weblogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Utilisez un compte local pour vous connecter.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="agile-field-txt">
            <label>
                 Email :
            </label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="agile-field-txt">
            <label>
               password :
            </label>

            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new {id = "myInput" })
            </div>
            <div class="agile_label">
                <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                <label class="check" for="check3">Show password</label>
            </div>
        </div>
        <script>
            function myFunction() {
                var x = document.getElementById("myInput");
                if (x.type === "password") {
                    x.type = "text";
                } else {
                    x.type = "password";
                }
            }
        </script>
        <!-- //script for show password -->
        <div class="w3ls-login  w3l-sub">
            <input type="submit" value="Login">
        </div>
        <div><a style="text-align:center" href="/Account/webRegister">register</a></div>

}

    </div>

    <!-- //form ends here -->
    <!--copyright-->
    <div class="copy-wthree">
        <p>
            <span style="color:dodgerblue;">
                © 2018 manage project login Form . All Rights Reserved | Design by
                <a href="" target="_blank">ensas developper</a>
            </span>
        </p>
    </div>
    <!--//copyright-->
</body>

</html>